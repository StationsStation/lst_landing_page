{
  # Optional: set ACME email so cert notices reach you
  email admin@lstolas.xyz
  # Improve TLS defaults slightly
  servers {
    protocols h1 h2
  }
}

# Redirect www â†’ apex
www.lstolas.xyz {
  redir https://lstolas.xyz{uri} permanent
}

lstolas.xyz {
  encode zstd gzip

  # Basic request logging
  log {
    output stdout
    format console
  }

  # Security headers
  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "no-referrer-when-downgrade"
    Content-Security-Policy "default-src 'self'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline' https:; script-src 'self' 'unsafe-inline' https:; connect-src 'self' https: wss:"
  }

  # Static caching hints (adjust patterns as needed)
  @static {
    path *.css *.js *.png *.jpg *.jpeg *.gif *.svg *.webp *.ico *.woff *.woff2
  }
  header @static Cache-Control "public, max-age=31536000, immutable"

  reverse_proxy app:3000 {
    # WebSockets/SSE work automatically
    transport http {
      keepalive 30s
    }
  }
}
